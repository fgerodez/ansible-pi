{
	http_port {{ nextcloud_caddy_port }}
	admin off
}

0.0.0.0 {
      root * {{ nextcloud_caddy_mount_point }}

  	  php_fastcgi {{ nextcloud_docker_container }}:9000 {
        root {{ nextcloud_mount_src }}
	  }

 	  file_server

	  header {
	    Strict-Transport-Security max-age=31536000;
	  }

	  redir /.well-known/carddav /remote.php/dav 301
	  redir /.well-known/caldav /remote.php/dav 301

	  @forbidden {
	    path /.htaccess
	    path /data/*
	    path /config/*
	    path /db_structure
	    path /.xml
	    path /README
	    path /3rdparty/*
	    path /lib/*
	    path /templates/*
	    path /occ
	    path /console.php
	  }

	  respond @forbidden 404
}
